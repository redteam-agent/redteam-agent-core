# RedTeam Agent Core Configuration
# Copy this file to .env and fill in your API keys

# OpenRouter Configuration (required)
# Get your API key from https://openrouter.ai/
OPENROUTER_API_KEY=sk-or-your-api-key-here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Reducto Configuration (required)
# Get your API key from https://reducto.ai/
REDUCTO_API_KEY=your-reducto-api-key-here
REDUCTO_BASE_URL=https://api.reducto.ai

# Firecrawl Configuration (required)
# Get your API key from https://firecrawl.dev/
FIRECRAWL_API_KEY=your-firecrawl-api-key-here
FIRECRAWL_BASE_URL=https://api.firecrawl.dev

# Executor Service Configuration
EXECUTOR_SERVICE_URL=http://localhost:8001
EXECUTOR_TIMEOUT=30

# Chain Configuration
MAX_EXPLOIT_STEPS=30
MAX_REMEDIATION_ATTEMPTS=5

# Caching Configuration
CACHE_TTL_HOURS=24
CACHE_DIR=.cache
